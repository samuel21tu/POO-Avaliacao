<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bookstore.controller.MainController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="5" left="10"/>
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Sair" onAction="#handleLogout" style="-fx-base: #e06666;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Gerenciamento de Livros">
                    <font>
                        <Font name="System Bold" size="18"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filtrar por:"/>
                <ComboBox fx:id="searchTypeCombo" prefWidth="120"/>
                <TextField fx:id="searchField" promptText="Buscar..." HBox.hgrow="ALWAYS"/>
                
                <Label text="Preço Máx:"/>
                <TextField fx:id="maxPriceField" promptText="0.00" prefWidth="80"/>
                <Button text="Aplicar Filtros" onAction="#handleFilter"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="bookTable">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colTitle" text="Título" prefWidth="200"/>
                <TableColumn fx:id="colPrice" text="Preço" prefWidth="80"/>
                <TableColumn fx:id="colAuthor" text="Autor" prefWidth="150"/>
            </columns>
        </TableView>
    </center>
    <right>
        <VBox spacing="10" prefWidth="300">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Detalhes do Livro">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Label>
            
            <Label text="Título"/>
            <TextField fx:id="titleField"/>

            <Label text="Preço"/>
            <TextField fx:id="priceField"/>

            <Label text="Autor"/>
            <HBox spacing="5">
                <ComboBox fx:id="authorComboBox" promptText="Selecionar Autor" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                <Button text="+" onAction="#handleAddAuthor"/>
                <Button text="-" onAction="#handleDeleteAuthor" style="-fx-base: #e06666;"/>
            </HBox>

            <Separator/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Adicionar" onAction="#handleAdd" style="-fx-base: #b6d7a8;"/>
                <Button text="Atualizar" onAction="#handleUpdate" style="-fx-base: #ffe599;"/>
                <Button text="Excluir" onAction="#handleDelete" style="-fx-base: #e06666;"/>
            </HBox>
            <Button text="Limpar Seleção" onAction="#handleClear" maxWidth="Infinity"/>
        </VBox>
    </right>
</BorderPane>
